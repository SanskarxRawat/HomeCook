<!DOCTYPE html>
<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=0.8, maximum-scale=1">
	<title>Recipe App</title>
	<style media="screen">
		body {
			margin: 0;
			padding: 0;
			height: 100%;
			color: black;
			text-align: center;
			font-family: sans-serif;
		}
		#nav {
			background-color: #7D498D;
		}
		#footer {
			background-color: #9C73A9;
			position: relative;
			bottom: 0;
		}
		#container {
			height: 100px;
			padding-top: 40px;
		}
		.block {
			padding-top: 40px;
			width: 100%;
			text-align: center;
			height: 60px;
			border: black dashed 5px;
		}
	</style>
</head>

<body>
	<div id="nav">
		<div class="col-sm nav-align">
			<h1 id="title">Recipe App</h1>
			<a href="/chat" class="chat-icon">
				@
			</a>
		</div>
		<div class="col-sm nav-align">
			<a href="/">
				<span class="button">Home</span>
			</a>
			<a href="/courses">
				<span class="button">Cooking Courrses</span>
			</a>
			<a href="/contact">
				<span class="button">Contact</span>
			</a>
		</div>
		<div class="login-status">
			<% if((loggedIn)){%>
				<div class="bubble logged-in">
					Logged in as <a href="<%=`/users/${currentUser._id}`%>">
						<%= currentUser.fullName %></a>
				</div>
				<div class="log-out">
					<a href="/users/logout">Log out</a>
				</div>
				<div class="bubble log-in">
					<a href="/users/login">Log In</a>
				</div>
			<%}%>
		</div>
	</div>

	<div class="flashes">
		<% if (flashMessages) { %>
			<% if (flashMessages.success) { %>
			<div class="flash success">
				<%= flashMessages.success %>
			</div>
			<% } else if (flashMessages.error) { %>
			<div class="flash error">
				<%= flashMessages.error %>
			</div>
			<% } %>
			<% } %>
	</div>

	<div id="container">
		<%- body %>
	</div>


</body>

</html>