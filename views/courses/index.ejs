<h2 class='text-5xl text-center my-8 font-navigation' >Courses Table</h2>
<table class="border-collapse w-3/4 mx-40 my-16">
  <thead>
      <tr>
          <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Title</th>
          <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Description</th>
          <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Edit</th>
          <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">Delete</th>

      </tr>
  </thead>
  <tbody>
    <% courses.forEach( (course) => { %>
      <tr class="bg-white lg:hover:bg-gray-100 flex lg:table-row flex-row lg:flex-row flex-wrap lg:flex-no-wrap mb-10 lg:mb-0">
          <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b block lg:table-cell relative lg:static font-list text-lg font-semibold">
              <a href="<%= `/courses/${course._id}`%>"><%= course.title %></a>
          </td>
          <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b block lg:table-cell relative lg:static font-list text-lg font-semibold">
              <%= course.description %>
          </td>
          <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b block lg:table-cell relative lg:static text-lg font-semibold">
              <a  href="<%=`/courses/${course._id}/edit`%>" class="text-green-400 hover:text-blue-600 underline">
                  Edit
              </a>
          </td>
          <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b block lg:table-cell relative lg:static text-lg font-semibold">
              <a href="<%=`/courses/${course._id}/delete?_method=DELETE`%>" onclick="return confirm('Are you sure you want to delete this record?')" class="text-red-400 hover:text-blue-600 underline pl-6"> 
                  Delete
              </a>
          </td>
      </tr>
  <%}) %>
  </tbody>
</table>