<h2>Courses Table</h2>
<table class="table">
    <thread>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thread>
    <tbody>
        <% courses.forEach(course=>{%>
            <tr>
                <td>
                    <a href="<%= `/courses/${courses._id}`%>">
                        <%= course.title%>
                    </a>
                </td>
                <td>
                    <%= course.description%>
                </td>
                <td>
                    <a href="<%= `courses/${courses._id}/edit%>`">
                        Edit
                    </a>
                </td>
                <td>
                    <a href="<%=`courses/${courses._id}/delete?_method=DELETE`%>" onclick="return confirm('Are you sure you want  to  delete this record?')"a>Delete</a>
                </td>
            </tr>
        <%});%>
    </tbody>
</table>