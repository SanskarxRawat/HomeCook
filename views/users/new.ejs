<div class="data-form">
    <form class="form-signin" action="/users/create" method="POST">
        <h2 class="form-signin-heading">Create a new user:</h2>
        <label for="inputFirstName">First Name</label>
        <input type="text" name="last" id="inputLastName" class="form-control"
        placeholder="First" autofocus>
        <label for="inputLastName">First Name</label>
        <input type="text" name="last" id="inputPassword" class="form-control"
        placeholder="Last">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" placeholder="Password" class="form-control"  required>
        <label for="inputEmail">Email address</label>
        <input type="email" name="email" id="inputEmail" class="form-control"
        placeholder="Email address" required>
        <label for="inputZipCode">Zip Code</label>
        <input type="text" name="zipCode" id="inputZipCode" class="form-control"
        pattern="[0-9]{5}" placeholder="Zip Code" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
    </form>
</div>